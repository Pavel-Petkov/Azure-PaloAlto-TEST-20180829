{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.2",
  "parameters": {
    "location": {
      "type": "string"
    },
    "nicName": {
      "type": "string"
    },
    "subnet0Name": {
      "type": "string"
    },
    "subnet0StartAddress": {
      "type": "string"
    },
    "subnet1Name": {
      "type": "string"
    },
    "subnet1StartAddress": {
      "type": "string"
    },
    "subnet2Name": {
      "type": "string"
    },
    "subnet2StartAddress": {
      "type": "string"
    },
    "virtualNetworkName": {
      "type": "string"
    },
    "virtualNetworkExistingRGName": {
      "type": "string"
    },
    "PublicIPResourceId": {
      "type": "string"
    }
  },
  "variables": {
      "vnetID": "[resourceId(parameters('virtualNetworkExistingRGName'),concat('Microsoft.Network','/','virtualNetworks'),parameters('virtualNetworkName'))]",
      "subnet0Ref": "[concat(variables('vnetID'),'/subnets/',parameters('subnet0Name'))]",
      "subnet1Ref": "[concat(variables('vnetID'),'/subnets/',parameters('subnet1Name'))]",
      "subnet2Ref": "[concat(variables('vnetID'),'/subnets/',parameters('subnet2Name'))]"
  },
  "resources": [
    {
      "name": "[concat(parameters('nicName'), 'mgmt-nic')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[parameters('location')]",
      "apiVersion": "2017-10-01",
      "properties": {
        "ipConfigurations": [
          {
            "name": "azuse2tpan01-mgmt-ipconfig",
            "properties": {
              "privateIPAllocationMethod": "Static",
			  "privateIpAddress": "172.22.0.251",
              "publicIPAddress": {
                 "id": "[parameters('PublicIPResourceId')]"
              },
              "subnet": {
                "id": "[variables('subnet0Ref')]"
              }
            }
          }
        ]
      }
    },
    {
      "name": "[concat(parameters('nicName'), 'untrust-nic')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[parameters('location')]",
      "apiVersion": "2017-10-01",
      "properties": {
      "enableIPForwarding": true,
        "ipConfigurations": [
          {
            "name": "azuse2tpan01-untrust-ipconfig",
            "properties": {
              "privateIPAllocationMethod": "Static",
			  "privateIpAddress": "172.22.2.51",
              "subnet": {
                "id": "[variables('subnet1Ref')]"
              }
            }
          }
        ]
      }
    },
    {
      "name": "[concat(parameters('nicName'), 'trust-nic')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[parameters('location')]",
      "apiVersion": "2017-10-01",
      "properties": {
        "enableIPForwarding": true,
        "ipConfigurations": [
          {
            "name": "azuse2tpan01-trust-ipconfig",
            "properties": {
              "privateIPAllocationMethod": "Static",
			  "privateIpAddress": "172.22.3.51",
              "subnet": {
                "id": "[variables('subnet2Ref')]"
              }
            }
          }
        ]
      }
    }
  ],
  "outputs": {}
}
